{
  "name": "upgrade-helper",
  "version": "0.1.0",
  "homepage": "https://backstage.github.io/upgrade-helper",
  "license": "MIT",
  "scripts": {
    "build": "EXTEND_ESLINT=true react-app-rewired build",
    "docker-test-e2e": "yarn start-and-wait && react-app-rewired test --watchAll=false --onlyChanged=false --testPathPattern='/__tests__/.*(\\.|).e2e.spec.js?$'",
    "lint": "eslint . --cache --report-unused-disable-directives",
    "prepare": "husky install",
    "start": "EXTEND_ESLINT=true react-app-rewired start",
    "start-and-wait": "yarn start & wget --retry-connrefused --waitretry=1 --read-timeout=20 --timeout=15 -t 30 http://localhost:3000/",
    "test": "react-app-rewired test --watchAll=false --onlyChanged=false --testPathPattern='/__tests__/((?!e2e).)*.spec.js?$'",
    "test-e2e": "docker-compose run tests"
  },
  "dependencies": {
    "@ant-design/icons": "5.0.1",
    "@emotion/core": "10.0.28",
    "@emotion/styled": "10.0.27",
    "antd": "5.2.3",
    "date-fns": "^2.29.3",
    "lodash": "^4.17.21",
    "framer-motion": "^2.9.5",
    "markdown-to-jsx": "7.1.9",
    "query-string": "6.11.1",
    "react": "18.2.0",
    "react-content-loader": "5.0.2",
    "react-copy-to-clipboard": "5.1.0",
    "react-diff-view": "2.4.2",
    "react-dom": "18.2.0",
    "react-dom-confetti": "0.1.3",
    "react-ga": "2.7.0",
    "react-use": "^17.4.0",
    "react-github-btn": "1.4.0",
    "react-scripts": "5.0.1",
    "semver": "7.3.8",
    "use-persisted-state": "^0.3.3"
  },
  "devDependencies": {
    "@emotion/babel-preset-css-prop": "10.0.27",
    "@testing-library/react": "^14.0.0",
    "customize-cra": "^1.0.0",
    "customize-cra-react-refresh": "^1.1.0",
    "eslint": "^8.35.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gh-pages": "5.0.0",
    "husky": "8.0.3",
    "jest-image-snapshot": "4.5.0",
    "prettier": "2.8.4",
    "pretty-quick": "3.1.3",
    "puppeteer": "10.0.0",
    "react-app-rewired": "^2.2.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "jsx-a11y/accessible-emoji": "off",
      "import/no-anonymous-default-export": "off",
      "react-hooks/exhaustive-deps": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern \"src/**/*.*(js|jsx)\"",
      "pre-push": "yarn run lint"
    }
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ]
  }
}
